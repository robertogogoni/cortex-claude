{
  "name": "claude-memory-orchestrator",
  "version": "1.0.0",
  "description": "100% persistent memory system for Claude Code with auto-extraction, auto-recall, and compounding learnings",
  "main": "index.cjs",
  "type": "commonjs",
  "scripts": {
    "test": "node tests/test-core.cjs && node tests/test-hooks.cjs && node tests/test-lads.cjs",
    "test:core": "node tests/test-core.cjs",
    "test:hooks": "node tests/test-hooks.cjs",
    "test:lads": "node tests/test-lads.cjs",
    "install-hooks": "node scripts/install-hooks.cjs",
    "uninstall-hooks": "node scripts/uninstall-hooks.cjs",
    "status": "node scripts/status.cjs"
  },
  "keywords": [
    "claude",
    "claude-code",
    "memory",
    "persistent-memory",
    "ai",
    "llm",
    "hooks",
    "learning",
    "cross-session"
  ],
  "author": "Roberto Gogoni",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robertogogoni/claude-memory-orchestrator.git"
  },
  "bugs": {
    "url": "https://github.com/robertogogoni/claude-memory-orchestrator/issues"
  },
  "homepage": "https://github.com/robertogogoni/claude-memory-orchestrator#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "index.cjs",
    "core/**/*.cjs",
    "hooks/**/*.cjs",
    "scripts/**/*.cjs",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "cmo": "./scripts/cli.cjs"
  },
  "directories": {
    "test": "tests"
  }
}
